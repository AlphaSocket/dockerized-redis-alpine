#!/bin/sh
set -e

# Install all dependencies
echo "### Install all dependencies..."
apk add --no-cache $BUILDER_DEPENDENCIES $SETUP_DEPENDENCIES_SETUP $SETUP_DEPENDENCIES_CONFIG $SETUP_DEPENDENCIES_RUNTIME


# Install dependencies
echo "### Install dependencies..."
apk add --no-cache $SETUP_DEPENDENCIES_CONFIG $SETUP_DEPENDENCIES_SETUP

# Setup config folder
echo "### Setup config folder..."
if [ ! -d "$BUILD_PATHS_CONFIG_REDIS" ]; then
    mkdir -p $BUILD_PATHS_CONFIG_REDIS;
fi



exit 0